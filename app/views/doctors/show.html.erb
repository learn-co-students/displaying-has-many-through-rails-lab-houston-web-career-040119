<%= @doctor.name %>
<%= @doctor.department %>
<%= @doctor.appointments.each do |a| %>
<li><%="#{a.appointment_datetime.strftime("%B")} #{a.appointment_datetime.day}, #{a.appointment_datetime.year} at #{a.appointment_datetime.hour}:#{a.appointment_datetime.min}" %> 
with <%= link_to a.patient.name, patient_path(a.patient) %>
</li>
<% end  %>



